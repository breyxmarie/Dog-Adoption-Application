<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFBB6">

  <Button
    android:id="@+id/backButton"
    android:layout_width="57dp"
    android:layout_height="57dp"
    android:background="@drawable/back2"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="1dp" />

  <LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="414dp"
    android:layout_height="200dp"
    android:layout_weight="1"
    android:background="@drawable/paw"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView3">

    <Space
      android:layout_width="match_parent"
      android:layout_height="16dp" />

    <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/montserrat"
      android:paddingTop="20dp"
      android:text="Woof! Woof!"
      android:textAlignment="center"
      android:textColor="#CCBFBF"
      android:textSize="30sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/textView2"
      android:layout_width="match_parent"
      android:layout_height="79dp"
      android:fontFamily="@font/montserrat"
      android:paddingTop="20dp"
      android:text="Lend a paw and give these cuddly furries some love!"
      android:textAlignment="center"
      android:textColor="#CCBFBF"
      android:textSize="10sp"
      android:textStyle="bold" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/linearLayout5"
    android:layout_width="413dp"
    android:layout_height="65dp"
    android:background="#513A24"
    android:orientation="horizontal"
    android:paddingTop="7dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
      android:id="@+id/imageView4"
      android:layout_width="18dp"
      android:layout_height="49dp"
      android:layout_weight="1"
      app:srcCompat="@drawable/dog128px" />

    <LinearLayout
      android:layout_width="41dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical"
      android:paddingTop="10dp">

      <TextView
        android:id="@+id/textView57"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="DogsInSight!"
        android:textColor="#D6CFCF"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="679dp" />

      <TextView
        android:id="@+id/textView58"
        android:layout_width="154dp"
        android:layout_height="17dp"
        android:fontFamily="@font/montserrat"
        android:text="Lorem ipsum dolor sit amet"
        android:textColor="#D6CFCF"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="701dp" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="80dp"
      android:layout_height="76dp"
      android:layout_weight="1"
      android:orientation="vertical"
      android:paddingTop="10dp"
      android:paddingRight="7dp">

      <TextView
        android:id="@+id/textView59"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone No: (000) 000.000"
        android:textColor="#D6CFCF"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="671dp" />

      <TextView
        android:id="@+id/textView60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: dis@gmail.com"
        android:textColor="#D6CFCF"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="688dp" />

      <TextView
        android:id="@+id/textView61"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="Address: 123 Anywhere St., City"
        android:textColor="#D6CFCF"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="705dp" />
    </LinearLayout>
  </LinearLayout>

  <ImageView
    android:id="@+id/imageView3"
    android:layout_width="409dp"
    android:layout_height="58dp"
    android:background="#D4A262"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/dog128px"
    tools:layout_editor_absoluteX="2dp" />

  <LinearLayout
    android:layout_width="404dp"
    android:layout_height="430dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    tools:layout_editor_absoluteX="1dp">

    <TextView
      android:id="@+id/textView10"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Adoptee"
      android:textColor="#000000" />

    <TextView
      android:id="@+id/textView17"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Information"
      android:textColor="#000000" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="151dp"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/adopteeImage"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/dog" />

      <LinearLayout
        android:layout_width="299dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textColor="#000000" />

          <TextView
            android:id="@+id/aLDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="29dp"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Adoptee Name"
            android:textColor="#000000" />

          <TextView
            android:id="@+id/aLAdopteeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dog Name"
            android:textColor="#000000" />

          <TextView
            android:id="@+id/aLDogName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contact Number"
            android:textColor="#000000" />

          <TextView
            android:id="@+id/aLContactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Email"
            android:textColor="#000000" />

          <TextView
            android:id="@+id/aLEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Address"
            android:textColor="#000000" />

          <TextView
            android:id="@+id/aLAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"></LinearLayout>

      </LinearLayout>
    </LinearLayout>

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
